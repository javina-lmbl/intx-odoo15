<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record model="ir.ui.view" id="partner_instructor_form_view">
    <field name="name">partner.instructor</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <notebook position="inside">
        <page string="Devices">
          <group>
            <field name="gpsdevice_ids">
              <tree string="GpsDevices Tree">
                <field name="name"/>
                <field name="nick"/>
                <field name="status"/>
                <field name="installation_date"/>
                <field name="platform_list_id"/>
              </tree>
            </field>
          </group>
        </page>
        <page string="Executives">
          <group>
            <field name="credit_and_collection"/>
            <field name="after_sales"/>
            <field name="coordinator"/>
          </group>
        </page>
        <page string="Custom Negotiations">
          <group>
            <field name="custom_negotiations"/>
          </group>
        </page>
      </notebook>
      <xpath expr="//field[@name='category_id']" position="after">
        <field name="client_type"/>
        <field name="client_status"/>
        <field name="first_installation_day"/>
        <field name="client_rating"/>
      </xpath>
    </field>
  </record>
</odoo>